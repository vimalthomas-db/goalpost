# ============================================================================
# Goalpost Configuration
# ============================================================================
# Copy this file to config.env and update with your values:
#   cp config.env.example config.env
# ============================================================================

# Required - Your Databricks workspace URL
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# Optional - CLI profile name (leave empty for OAuth browser login)
DATABRICKS_PROFILE=

# Optional - LLM Serving endpoint for AI features
LLM_ENDPOINT=

# ============================================================================
# Resources (defaults provided - change if needed)
# ============================================================================

# Catalog name (will be created if you have permissions)
CATALOG_NAME=goalpost_catalog

# Schema name
SCHEMA_NAME=goalpost

# SQL Warehouse ID (leave empty to find/create goalpost_warehouse)
WAREHOUSE_ID=

# Tag for cleanup automation (applied to catalog, schema, tables)
# Leave empty to skip tagging
REMOVE_AFTER_TAG=2026-04-30

# Debug mode
DEBUG=false

